#!/bin/csh
set xdir=../bin
#ANGL is the incidence angle from vertical
set ANGL=20
#AZM is the clockwise horizontal azimuth from the 1-axis of the elastic
# coefficients
foreach AZM ( 45 )
#
$xdir/synth <<!
aniso.data
synth.out
synth.out1
synth.out2
synth.in
$ANGL
1
0.
$AZM
!
#
echo "Done propagation, now convolving source"
#
$xdir/sourc1 <<!
test.$AZM.$ANGL
synth.out1
synth.out2
1 0 0
5.
0.
2
!
#
echo "Done source convolution, now writing to sac"
$xdir/saccpt <<!
test.$AZM.$ANGL
0
!

end
echo OK
